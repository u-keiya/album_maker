# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values for local development.
# DO NOT commit the actual .env file to Git.

# Database Configuration (Azure SQL)
DATABASE_HOST=your_server_name.database.windows.net
DATABASE_PORT=1433
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_db_name
# Optional: Add any TypeORM specific env vars if needed, e.g., synchronize, logging

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_access_key
# Alternatively, use a connection string:
# AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string

# JWT Configuration
JWT_SECRET=generate_a_strong_random_secret_key_here
JWT_EXPIRES_IN=3600s # Example: 1 hour

# Application Port (Optional, defaults often work)
# PORT=3000